<!DOCTYPE html>
<%- include('../../common/head') %>
<header>
  <%- include('../../common/nav') %>
</header>
  

<script src="../../../scripts/login.js"></script>
<body onload="adminCookie()"> 

   <!--Dark Theme-->
   <button onclick="toggleDark()">
    <svg aria-hidden="true" data-prefix="fas" data-icon="moon" xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 512 512" style="height: 2rem; width: 2rem;" class="svg-inline--fa fa-moon">
      <path fill="currentColor"
        d="M32 256C32 132.2 132.3 32 255.8 32c11.36 0 29.7 1.668 40.9 3.746 9.616 1.777 11.75 14.63 3.279 19.44C245 86.5 211.2 144.6 211.2 207.8c0 109.7 99.71 193 208.3 172.3 9.561-1.805 16.28 9.324 10.11 16.95C387.9 448.6 324.8 480 255.8 480 132.1 480 32 379.6 32 256z">
      </path>
    </svg></button>
  <script type="text/javascript" src="toggleDark.js"></script>
  
    <section class="reg">
        <form class="admin-sights-form" action="/addsight" method="POST">
            <div class="regcontainer ">
              <h1>Add Sight</h1>
              <p>Please fill in this form to add a destination.</p>
              <hr>
              
              <div class="form-input-material">
                <label for="name"><b>Name</b></label>
                <input type="text" placeholder="Enter Name" name="name" id="name" class="form-control-material" required>
              </div>
              
              <div class="form-input-material">
                <label for="desc"><b>Description</b></label>
                <input type="text" placeholder="Enter Description" name="desc" id="desc" class="form-control-material" required>
              </div>
          
              <div class="form-input-material">
                <label for="tropoi"><b>Access Points</b></label>
                <input type="text" placeholder="Enter Access Point URL" name="tropoi" id="tropoi" class="form-control-material" required>
              </div>

              <div class="form-input-material">
                <label for="photo"><b>Photo Source</b></label>
                <input type="text" placeholder="Enter image name.jpg in images folder" name="photo" id="photo" class="form-control-material" required>
              </div>

              <div class="form-input-material">
                <label for="photo"><b>Map: X Value</b></label>
                <input type="text" placeholder="Enter x value of pin in map" name="xpos" id="xpos" class="form-control-material" required>
              </div>

              <div class="form-input-material">
                <label for="photo"><b>Map: Y Value</b></label>
                <input type="text" placeholder="Enter y value of pin in map" name="ypos" id="ypos"  class="form-control-material" required>
              </div>

            
              <hr>
          
        
              <input type="submit" class="addsightbtn" value="Add Sight" class="btn btn-primary btn-ghost">
            </div>
          
          </form>
        </section>
  

  <br><br>
            <div id='sightimg'>
                
                <% sights.forEach(function(sight){ %>
                  
                    <div id="sighent">
                    <form id="sightform" action="/editsight" method="POST">
                        <input type="text" name="original" value="<%=sight.name%>" onchange="this.form.submit()" hidden> 
                        <img src="<%= sight.photo %>">
                        <input type="text" name="photo" value="<%= sight.photo %>" onchange="this.form.submit()">
                        <input type="text" name="name" value="<%= sight.name %>" onchange="this.form.submit()">
                        <input type="text" name="desc" value="<%= sight.desc %>" onchange="this.form.submit()"> 
                        <input type="text" name="tropoi" value="<%= sight.tropoi %>" onchange="this.form.submit()">
                        <input type="text" name="xpos" value="<%= sight.xpos %>" onchange="this.form.submit()">
                        <input type="text" name="ypos" value="<%= sight.ypos %>" onchange="this.form.submit()">
                        <input type="button" value="Edit">
                    </form>
            <form action="/deletesight" method="POST">
                <div ><p class="edit_button">Tick Box To Remove</p> <input type="checkbox" name="checkbox" value="<%=sight.name%>" onchange="this.form.submit()"></div>
            </form>
            </div>
            
            <% }); %>
          </div>

</body>


<footer>
    <%- include('../../common/footer') %>
  </footer>

</html>