<body onload="adminCookie()"> 
    <section class="reg">
        <form action="/addrev" method="POST">
            <div class="regcontainer">
              <h1>Add for Reservations</h1>
              <p>Please fill in this form to add a room for reservation.</p>
              <hr>
              <label for="name"><b>Name</b></label>
              <input type="text" placeholder="Enter Name" name="name" id="name" required>
          
              <label for="desc"><b>Description</b></label>
              <input type="text" placeholder="Enter Description" name="desc" id="desc" required>
              <label for="price"><b>Price per day</b></label>
              <input type="text" placeholder="Enter Price Per day" name="price" id="price" required>
          
              <label for="tropoi"><b>Category</b></label>
              <input type="text" placeholder="Enter Category" name="cat" id="cat" required>
              <label for="photo"><b>Photo Source</b></label>
              <input type="text" placeholder="Enter image name.jpg in images folder" name="photo" id="photo" required>
            
              <hr>
          
        
              <input type="submit" class="addsightbtn" value="Add Room">
            </div>
          
          </form>
        </section>
  

  <br><br>
            <div id='sightimg'>
                
                <% revs.forEach(function(rev){ %>
                  
                    <div id="sighent">
                    <form id="sightform" action="/editrev" method="POST">
                        <input type="text" name="original" value="<%=rev.name%>" onchange="this.form.submit()" hidden> 
                        <img src="<%= rev.photo %>">
                        <input type="text" name="photo" value="<%= rev.photo %>" onchange="this.form.submit()">
                        <input type="text" name="name" value="<%= rev.name %>" onchange="this.form.submit()">
                        <input type="text" name="desc" value="<%= rev.desc %>" onchange="this.form.submit()"> 
                        <input type="text" name="price" value="<%= rev.price %>" onchange="this.form.submit()"> 
                        <input type="text" name="cat" value="<%= rev.cat %>" onchange="this.form.submit()">
                        <input type="button" value="Edit">
                    </form>
            <form action="/deleterev" method="POST">
                <div ><p id="sighttick">Tick Box To Remove</p> <input type="checkbox" name="checkbox" value="<%=rev.name%>" onchange="this.form.submit()"></div>
            </form>
            </div>
            
            <% }); %>
          </div>

</body>


