    </svg></button>
  <script type="text/javascript" src="toggleDark.js"></script>
  
    <section class="reg">
        <form class="admin-sights-form" action="/addact" method="POST">
            <div class="regcontainer">
              <h1>Add Activity</h1>
              <p>Please fill in this form to add an activity.</p>
              <hr>

              <div class="form-input-material">
                <label for="name"><b>Name</b></label>
                <input class="form-control-material"  type="text" placeholder="Enter Name" name="name" id="name" required>
              </div>
          
              <div class="form-input-material">
                <label for="desc"><b>Description</b></label>
                <input class="form-control-material"  type="text" placeholder="Enter Description" name="desc" id="desc" required>
              </div>
          
              <div class="form-input-material">
                <label for="tropoi"><b>Category</b></label>
                <input class="form-control-material"  type="text" placeholder="Enter Category" name="cat" id="cat" required>
              </div>

              <div class="form-input-material">
                <label for="photo"><b>Photo Source</b></label>
                <input class="form-control-material"  type="text" placeholder="Enter image name.jpg in images folder" name="photo" id="photo" required>
              </div>
            
              <hr>
          
        
              <input type="submit" class="addsightbtn" value="Add Activity">
            </div>
          
          </form>
        </section>
  

  <br><br>
            <div id='sightimg'>
                
                <% acts.forEach(function(act){ %>
                  
                    <div id="sighent">
                    <form id="sightform" action="/editact" method="POST">
                        <input type="text" name="original" value="<%=act.name%>" onchange="this.form.submit()" hidden> 
                        <img src="<%= act.photo %>">
                        <input type="text" name="photo" value="<%= act.photo %>" onchange="this.form.submit()">
                        <input type="text" name="name" value="<%= act.name %>" onchange="this.form.submit()">
                        <input type="text" name="desc" value="<%= act.desc %>" onchange="this.form.submit()"> 
                        <input type="text" name="cat" value="<%= act.cat %>" onchange="this.form.submit()">
                        <input type="button" value="Edit">
                    </form>
            <form action="/deleteact" method="POST">
                <div ><p id="sighttick">Tick Box To Remove</p> <input type="checkbox" name="checkbox" value="<%=act.name%>" onchange="this.form.submit()"></div>
            </form>
            </div>
            
            <% }); %>
          </div>

</body>


<footer>
    <%- include('../../common/footer') %>
  </footer>

</html>